<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1121212"
    android:foregroundTint="#80D8FF"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/dice_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="dice_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.456"
        app:srcCompat="@drawable/dice" />

    <Button
        android:id="@+id/roll_btn"
        android:layout_width="205dp"
        android:layout_height="77dp"
        android:layout_marginTop="75dp"
        android:backgroundTint="#D90037"
        android:fontFamily="@font/oxygen_light"
        android:text="ROLL"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dice_img"
        app:layout_constraintVertical_bias="0.274" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="350dp"
        android:layout_height="77dp"
        android:layout_marginTop="20dp"
        android:fontFamily="casual"
        android:text="Dice Roller"
        android:textAlignment="center"
        android:textColor="#D90037"
        android:textSize="60sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/dice_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.193" />

</androidx.constraintlayout.widget.ConstraintLayout>